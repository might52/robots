<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="t1000" class="robots.impls.robot.ModelT1000">
        <!-- Constructors -->

        <constructor-arg ref="toshibaHead" />
        <constructor-arg ref="sonyLeg" />
        <constructor-arg ref="sonyHand" />

        <!--Setters and getters-->

        <property name="hand" ref="sonyHand"  />
        <property name="head" ref="toshibaHead"/>
        <property name="leg" ref="toshibaLeg"/>

    </bean>

    <bean id="sonyHead" class="robots.impls.sony.SonyHead"/>
    <bean id="sonyHand" class="robots.impls.sony.SonyHand"/>
    <bean id="sonyLeg" class="robots.impls.sony.SonyLeg"/>

    <bean id="toshibaHead" class="robots.impls.toshiba.ToshibaHead"/>
    <bean id="toshibaHand" class="robots.impls.toshiba.ToshibaHand"/>
    <bean id="toshibaLeg" class="robots.impls.toshiba.ToshibaLeg"/>
</beans>